<div class="container">
  <div class="row">
    <div class="col-lg-10 col-md-8">
      <div class="rooms">
        <% if @user_rooms.present? %>
          <% @user_rooms.each do |room| %>
            <div class="row align-items-center">
              <%= link_to user_path(room.user) do %>
                <%= image_tag room.user.get_profile_image(100, 100), class: 'rounded-circle' %>
              <% end %>
              <%= link_to room.user.name, user_path(room.user) %>
              <div class="ml-auto">
                <%= link_to chat_path(room.user) do %>
                  <%= Chat.find_by(id: room.room.chat_ids.last).message %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p>メッセージはありません</p>
        <% end %>
        <div class="button h1">
          <%= link_to "", lists_rooms_path, class: 'fa-solid fa-circle-plus' %>
        </div>
      </div>
    </div>
  </div>
</div>