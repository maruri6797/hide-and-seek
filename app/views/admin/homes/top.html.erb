<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>ユーザー一覧</h3>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="col-2">ユーザーID</th>
            <th class="col-4">ユーザー名</th>
            <th class="col-4">メールアドレス</th>
            <th class="col-2">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <% user.is_deleted == false %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-secondary">退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>
