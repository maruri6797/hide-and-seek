<% pos.post_comments.each do |post_comment| %>
  <%= link_to user_path(post_comment.user) do %>
    <%= image_tag post_comment.user.get_profile_image(100, 100), class: 'rounded-circle' %>
  <% end %>
  <%= link_to post_comment.user.name, user_path(post_comment.user) %>
  <%= post_comment.comment %><%= l post_comment.created_at, format: :short %>
  <% if post_comment.user == current_user %>
    <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: false, class: 'btn btn-danger', data: {confirm: "削除してもよろしいですか？" } %>
  <% end %>
<% end %>