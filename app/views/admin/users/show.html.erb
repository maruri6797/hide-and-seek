<div class="container">
  <div class="row">
    <div class="col-lg-10 col-md-8">
      <div class="row">
        <h3 class="mx-5"><%= @user.name %>さんのユーザー詳細</h3>
        <%= link_to "編集する", edit_admin_user_path(@user), class: 'btn btn-success mr-5' %>
      </div>
      <div class="row justify-content-start">
        <p class="col-4">ユーザーID</p>
        <%= @user.id %>
      </div>
      <div class="row justify-content-start">
        <p class="col-4">ユーザー名</p>
        <%= @user.name %>
      </div>
      <div class="row justify-content-start">
        <p class="col-4">メールアドレス</p>
        <%= @user.email %>
      </div>
      <div class="row justify-content-start">
        <p class="col-4">ライセンス</p>
        <% if @user.is_license == false %>
          <p>なし</p>
        <% else %>
          <p>認証済み</p>
        <% end %>
      </div>
      <div class="row justify-content-start">
        <p class="col-4">ステータス</p>
        <% if @user.is_deleted == false %>
          <p class="text-success">有効</p>
        <% else %>
          <p class="text-secondary">退会</p>
        <% end %>
      </div>
      <div class="tabs d-flex justify-content-between align-items-center">
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#active">公開中</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#edited">編集済み</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#deleted">削除済み</a>
          </li>
        </ul>
      </div>
      <div class="tab-content mt-3">
        <div id="active" class="tab-pane fade show active">
          <%= render 'admin/posts/index', posts: @active_posts %>
        </div>
        <div id="edited" class="tab-pane fade">
          <%= render 'admin/posts/index', posts: @edited_posts %>
        </div>
        <div id="deleted" class="tab-pane fade">
          <%= render 'admin/posts/index', posts: @deleted_posts %>
        </div>
      </div>
    </div>
  </div>
</div>
