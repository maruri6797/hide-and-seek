<div class="container">
  <div class="row">
    <div class="col-lg-10 col-md-8">
      <h3 class="text-center">入力内容確認</h3>
      <div class="row">
        <p class="col-4 fw-bold">お名前</p>
        <%= @contact.name %>
      </div>
      <div class="row">
        <p class="col-4 fw-bold">メールアドレス</p>
        <%= @contact.email %>
      </div>
      <div class="row">
        <p class="col-4 fw-bold">件名</p>
        <%= @contact.subject %>
      </div>
      <div>
        <p class="fw-bold">内容</p>
        <%= @contact.content %>
      </div>
      <div class="row">
        <div class="send">
          <%= form_with model: @contact do |f| %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :email %>
            
          <% end %>
        </div>


      </div>
    </div>
  </div>
</div>