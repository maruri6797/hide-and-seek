<div class="container">
  <div class="row">
    <div class="col-lg-10 col-md-8">
      <div class="d-flex align-items-center">
        <%= link_to user_path(@post.user) do %>
          <%= image_tag @post.user.get_profile_image(150, 150), class: 'rounded-circle mr-3' %>
        <% end %>
        <%= link_to @post.user.name, user_path(@post.user), class: 'h4' %>
      </div>
      <div class="row m-3">
        <p class="h3"><%= @post.title %></p>
        <% if @post.user.id == current_user.id %>
          <%= link_to "編集する", edit_post_path(@post), class: 'btn btn-primary ml-auto' %>
        <% end %>
      </div>
      <%= simple_format(h(@post.text)) %>
      <% if @post.images.attached? %>
        <% @post.images.each do |image| %>
          <%= image_tag image.variant(resize: '920x300') %>
        <% end %>
      <% end %>
      <div class="tag">
        <i class="fa-solid fa-tag"></i>
        <% @post.tags.each do |tag| %>
          <%= link_to tag.name, result_path(tag_id: tag.id) %>
        <% end %>
      </div>
      <p class="text-right"><%= l @post.created_at %></p>
      <div class="d-flex justify-content-around">
        <i class="fa-solid fa-eye"><%= @post.view_counts.count %></i>
        <div class="favorite<%= @post.id %>">
          <%= render 'public/favorites/favorite', put: @post %>
        </div>
        <div class="comment_count">
          <%= render 'public/post_comments/comment_count', pos: @post %>
        </div>
      </div>
      <!--コメント機能-->
      <div class="post_comments my-5">
        <%= render 'public/post_comments/comment', pos: @post %>
      </div>
      <%= form_with model: [@post, @post_comment], method: :post, local: false do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class: 'col-10' %>
          <%= button_tag type: "submit", class: 'btn btn-default' do %>
            <i class="fa-regular fa-paper-plane"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>