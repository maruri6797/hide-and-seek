<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-10">
      <% if @follow_posts.present? %>
        <%= render 'public/posts/index', posts: @follow_posts %>
        <% if @follow_posts.count > 10 %>
          <%= paginate @follow_posts %>
        <% end %>
      <% else %>
        <%= render 'public/posts/index', posts: @posts %>
        <%= paginate @posts %>
      <% end %>
      <%= render 'public/posts/post_button' %>
    </div>
  </div>
</div>