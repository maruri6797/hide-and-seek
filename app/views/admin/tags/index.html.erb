<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :name, "タグ", class: 'col-4' %>
          <%= f.text_field :name %>
          <%= f.submit "登録", class: 'btn btn-success' %>
        </div>
      <% end %>
      
      <% @tags.each do |tag| %>
        <%= tag.name %>
        <%= link_to "", admin_tag_path(tag), method: :delete, class: 'fa-solid fa-trash-can' %>
      <% end %>
    </div>
  </div>
</div>